<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Islamy_project" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gold</item>
        <item name="colorPrimaryVariant">#B68640</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
    </style>
    <style name="txtToolbar">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/lobster</item>
    </style>

    <style name="txt_fragment_quran">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/lobster</item>
    </style>

    <style name="txt_title_quran">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/lobster</item>
    </style>
    <style name="txt_contant_quran">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/dthuluth</item>
    </style>
    <style name="txt_fragment_hadeth">
        <item name="android:textColor">@color/alltextview_blackLight</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/lobster</item>
    </style>

    <style name="bakg_cardview_hadeth">
       <item name="android:backgroundTint">@color/gold</item>
    </style>
    <style name="img">
        <item name="android:background">@drawable/splash</item>
    </style>

    <style name="txt_card_hadeth">
        <item name="android:textColor">@color/white</item>
