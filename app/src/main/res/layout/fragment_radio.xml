<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".quran.QuranFragment">

        <ImageView
            android:id="@+id/image_radio"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="75dp"
            app:layout_constraintHeight_percent=".40"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            android:src="@drawable/radio_image"/>

    <TextView
        style="@style/radiotxt"
        android:id="@+id/tv_activty_radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/image_radio"
        app:layout_constraintEnd_toEndOf="@id/image_radio"
        app:layout_constraintStart_toStartOf="@id/image_radio"
        android:text="@string/ezat_elquran_elkarem"
        android:layout_marginTop="25dp"

        />

    <ImageView
        android:id="@+id/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_activty_radio"
        android:src="@drawable/play"

        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="@id/tv_activty_radio"
        app:layout_constraintStart_toStartOf="@id/tv_activty_radio"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/play"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_activty_radio"
        android:src="@drawable/skip_next"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toStartOf="@id/play"
        app:layout_constraintTop_toBottomOf="@id/tv_activty_radio"
        android:src="@drawable/skip_next"
        />







</androidx.constraintlayout.widget.ConstraintLayout>