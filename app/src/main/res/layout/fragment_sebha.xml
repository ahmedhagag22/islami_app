<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".quran.QuranFragment">

    <ImageView
        android:id="@+id/img_head_seb7a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:src="@drawable/head_sebha_logo_night"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_body_seb7a"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="-30dp"
        android:src="@drawable/body_sebha_logo_night"
        app:layout_constraintEnd_toEndOf="@id/img_head_seb7a"
        app:layout_constraintStart_toStartOf="@id/img_head_seb7a"
        app:layout_constraintTop_toBottomOf="@id/img_head_seb7a" />

    <TextView
        android:id="@+id/tv_numb_seb7a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="عدد التسبيحات "
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_body_seb7a" />

    <TextView
        android:id="@+id/counter_seb7a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_seb7a"
        android:padding="20dp"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="@id/tv_numb_seb7a"
        app:layout_constraintStart_toStartOf="@id/tv_numb_seb7a"
        app:layout_constraintTop_toBottomOf="@id/tv_numb_seb7a" />

    <TextView
        android:id="@+id/conver_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:background="@drawable/shape_seb7a"
        android:text="@string/elketma"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/counter_seb7a"
        app:layout_constraintStart_toStartOf="@id/counter_seb7a"
        app:layout_constraintTop_toBottomOf="@id/counter_seb7a"

        />


</androidx.constraintlayout.widget.ConstraintLayout>