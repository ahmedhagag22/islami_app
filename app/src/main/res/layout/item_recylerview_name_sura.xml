<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:paddingEnd="55dp"
    android:id="@+id/txt_view_item_quran_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="البقرة"

          app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/txt_fragment_quran"

        />
    <TextView
        android:id="@+id/txt_view_item_quran_num"
        android:paddingStart="55dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="wrap_content"
        tools:text="286"
        style="@style/txt_fragment_quran"
        />

    <View
        android:id="@+id/linebottom2"
        app:layout_constraintTop_toBottomOf="@id/txt_view_item_quran_name"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gold"></View>

</androidx.constraintlayout.widget.ConstraintLayout>